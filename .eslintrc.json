{
    "env": {
        "browser": false,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "no-tabs": 0,
        "no-restricted-syntax": 0,
        "global-require": 0,
        "import/no-dynamic-require": 0,
        "arrow-parens": 0,
        "padding-line-between-statements": ["error", { "blankLine": "always", "prev": "*", "next": "return"}],
        "comma-dangle": ["error", "never"]
    }
}
